@using Qvastart___1.ViewModels;
@model ProductViewModel
@{
    ViewData["Title"] = "Add Product";
}
<h1 class="text-info ProgtiqvaFontBold text-center mt-3">Add Product</h1>



<form asp-controller="Administrator" asp-action="AddProduct" method="post" role="form" class="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group ProgtiqvaFont">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control InputFont" name="Name">
        <span asp-validation-for="Name" class="Text-danger InputFont RegisterValidationStyle"></span>
    </div>

    <div class="form-group ProgtiqvaFont">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="Description" class="form-control InputFont" name="Description">
        <span asp-validation-for="Description" class="Text-danger InputFont RegisterValidationStyle"></span>
    </div>
    <div class="form-group ProgtiqvaFont">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="Price" class="form-check InputFont" name="Price">
        <span asp-validation-for="Price" class="Text-danger InputFont RegisterValidationStyle"></span>
    </div>
    <div class="form-group ProgtiqvaFont">
        <label asp-for="Images"></label>
        <input asp-for="Images" type="file" class="form-check InputFont" name="Images" multiple>
        <span asp-validation-for="Images" class="Text-danger InputFont RegisterValidationStyle"></span>
    </div>
    <div class="row">
        <div class="col-md-8">
            <button type="submit" class="btn btn-success mt-2 ProgtiqvaFontBold" value="Upload">Add Product</button>
        </div>
    </div>


</form>

@if (ViewBag.SaveResult == true)
{
    @await Html.PartialAsync("_SuccessOrFailAlertPartial", (true, "Your Product has been successfully Added."))

}else if(ViewBag.SaveResult == false)
{
    @await Html.PartialAsync("_SuccessOrFailAlertPartial", (false, "Your Product Failed To be Added."))

}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}